<table id="todays_arrivals">
  <tr>
    <th>Name</th>
    <th>Flight</th>
    <th>From</th>
    <th>Scheduled Time</th>
    <th>Status</th>
    <th>Actual Time</th>
  </tr>
  <% @arrivals.each do |arrival| %>
    <tr>
      <td><%= arrival.passenger_name %></td>
      <td><%= arrival.flight_number %></td>
      <td><%= arrival.from %></td>
      <td><%= arrival.flight_status.scheduled_time.to_s(:pretty_time) %></td>
      <td><%= arrival.flight_status.status %></td>
      <td><%= arrival.flight_status.current_time.to_s(:pretty_time) %></td>
    </tr>
  <% end %>
</table>